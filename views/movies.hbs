<div>
  <div>
    <h3>Ironhack Cinema</h3>
    <h4>Click on the movie to check the showtimes!</h4>

  </div>
  <div id="pelis">

    {{#each this.peliculas}}
      <div id="order">
        <div><img src="{{this.image}}" alt="{{this.title}}" /></div>
        <p><b>{{this.title}}</b></p>
        <a href="/movies/{{this._id}}">See more</a>
      </div>
    {{/each}}

  </div>

</div>